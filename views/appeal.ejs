      a{
        color: black;
        text-decoration-line: none;
      }

      a:hover{
        color: brown;
      }

        body{
    margin-top:20px;
    color: #1a202c;
    text-align: left;
    background-color: #e2e8f0;    
}
.main-body {
    padding: 15px;
}
.card {
    box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
}

.card {
    position: relative;
    display: flex;
    flex-direction: column;
    min-width: 0;
    word-wrap: break-word;
    background-color: #fff;
    background-clip: border-box;
    border: 0 solid rgba(0,0,0,.125);
    border-radius: .25rem;
}

.card-body {
    flex: 1 1 auto;
    min-height: 1px;
    padding: 1rem;
}

.gutters-sm {
    margin-right: -8px;
    margin-left: -8px;
}

.gutters-sm>.col, .gutters-sm>[class*=col-] {
    padding-right: 8px;
    padding-left: 8px;
}
.mb-3, .my-3 {
    margin-bottom: 1rem!important;
}

.bg-gray-300 {
    background-color: #e2e8f0;
}
.h-100 {
    height: 100%!important;
}
.shadow-none {
    box-shadow: none!important;
}
    </style>


</head>
<body>


    <div class="container">
        <div class="main-body">
        
              <!-- Breadcrumb -->
              <nav aria-label="breadcrumb" class="main-breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><h6><a href="/">Home</a></h6></li>
                  <li class="breadcrumb-item"><h6><a href="/student/appeal">Appeal Requests</a></h6></li>
                  <li class="breadcrumb-item"><h6><a href="/student/response">Appeal Response</a></h6></li>
                  <li class="breadcrumb-item"><h6><a href="/logout">LOGOUT</a></h6></li>
                </ol>
              </nav>
              <!-- /Breadcrumb -->
        
             <div style="text-align: center;">
                <h1>Appeal Failed Course</h1>              

             </div>
             <form action="/student/appeal" method="post">

                <div class="row">
                    <div class="col-lg-6">
                        <strong><label for="exampleFormControlInput1" class="form-label">Full Names</label></strong> 
                         <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Full Names" name="names" required>
                       </div>
                </div>
               

                <div class="row">
                    <div class="col-lg-6">
                        <strong><label for="exampleFormControlInput1" class="form-label">Computer Number</label></strong> 
                         <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Student computer Number" name="number" required>
                       </div>
                </div>

                  <div class="row">
                    <div class="col-lg-6">
                        <strong><label for="exampleFormControlInput1" class="form-label">Year Of Study</label></strong> 
                         <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Example : 4th" name="year" required>
                       </div>
                  </div>
                  
                  <div class="row">
                    <div class="col-lg-6">
                        <strong><label for="exampleFormControlInput1" class="form-label">Course Failed</label></strong> 
                         <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Name of Course" name="course" required>
                       </div>    
                  </div>
                  
                  <div class="row">
                    <div class="col-lg-6">
                        <strong><label for="exampleFormControlInput1" class="form-label">Course Lecturer</label></strong> 
                         <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Name of Course Lecturer" name="lecturer" required>
                       </div>
                  </div>
                  
                  <div class="row">
                    <div class="col-lg-6">
                        <strong><label for="exampleFormControlInput1" class="form-label">Department</label></strong> 
                         <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Department" name="department" required>
                       </div>
                  </div>
                  <div class="row">
                    <div class="col-lg-6">
                      <div class="mb-3">
                        <strong><label for="exampleFormControlTextarea1" class="form-label">Reason For Appealing</label></strong>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="reason" required></textarea>
                      </div>
                    </div>
                  </div>
                   <button class="btn"> <strong>Submit</strong></button>

            </form>



